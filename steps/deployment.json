{
    "Resources": {
      "DataBucket": {
        "Type": "AWS::S3::Bucket",
        "Properties": {
          "BucketName": "data-file-to-process"
        }
      },
      "DataBucketPolicy": {
        "Type": "AWS::S3::BucketPolicy",
        "Properties": {
          "Bucket": {
            "Ref": "DataBucket"
          },
          "PolicyDocument": {
            "Version": "2012-10-17",
            "Statement": [
              {
                "Effect": "Allow",
                "Principal": {
                  "AWS": [
                    "*"
                  ]
                },
                "Action": [
                  "s3:GetObject",
                  "s3:PutObject"
                ],
                "Resource": [
                  {
                    "Fn::Join": [
                      "",
                      [
                        "arn:aws:s3:::",
                        {
                          "Ref": "DataBucket"
                        },
                        "/*"
                      ]
                    ]
                  }
                ]
              }
            ]
          }
        }
      },
      "MyS3Object": {
        "Type": "AWS::S3::Object",
        "Properties": {
           "Bucket": {
                "Ref": "DataBucket"
            },
          "Key": "covid_data_2.csv",
          "Source": "../covid_data_2.csv"
        }
      }
    },
    "Outputs": {
      "BucketName": {
        "Value": {
          "Ref": "DataBucket"
        },
        "Export": {
            "Name": "DataBucket"
        }
      }
    }
  }
  


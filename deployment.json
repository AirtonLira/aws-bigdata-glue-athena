{
    "Resources": {
      "DataBucket": {
        "Type": "AWS::S3::Bucket",
        "Properties": {
          "BucketName": "data-file-to-process"
        }
      }
    },
    "DataBucketPolicy": {
          "Type": "AWS::S3::BucketPolicy",
          "Properties": {
            "Bucket": {
              "Ref": "DataBucket"
            },
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Principal": {
                    "AWS": [
                      "*"
                    ]
                  },
                  "Action": [
                    "s3:GetObject",
                    "s3:PutObject"
                  ],
                  "Resource": [
                    {
                      "Fn::Join": [
                        "",
                        [
                          "arn:aws:s3:::",
                          {
                            "Ref": "DataBucket"
                          },
                          "/*"
                        ]
                      ]
                    }
                  ]
                }
              ]
            }
          }
        },
    "Outputs": {
      "BucketName": {
        "Value": {
          "Ref": "DataBucket"
        }
      }
    }
  }
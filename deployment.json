{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Resources": {
        "dataFilesToProcess": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "BucketName": "data-file-to-process"
            }            
        },
        "MyBucketPolicy": {
            "Type": "AWS::IAM::Policy",
            "Properties": {
                "PolicyName": "BucketDataFilesToProcess",
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Sid": "AllowCreateBucket",
                            "Effect": "Allow",
                            "Action": "s3:CreateBucket",
                            "Resource": "arn:aws:s3:::data-file-to-process"
                        }
                    ]
                },
                "Groups": [],
                "Roles": [],
                "Users": [
                    "arn:aws:iam::991096851101:user/deployer"
                ]
            },
            "DependsOn": [
                "dataFilesToProcess"
            ]
        }
    }
}

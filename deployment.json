{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Resources": {
        "dataFilesToProcess": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "BucketName": "data-file-to-process"
            }
        },
        "MyBucketPolicy": {
            "Type": "AWS::IAM::Policy",
            "Properties": {
                "PolicyName": "BucketDataFilesToProcess",
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Sid": "AllowCreateBucket",
                            "Effect": "Allow",
                            "Action": [
                                "s3:CreateBucket",
                                "s3:ListBucket",
                                "s3:PutObject"
                            ],
                            "Resource": [
                                "arn:aws:s3:::data-file-to-process",
                                "arn:aws:s3:::data-file-to-process/*"
                            ]
                        },
                        {
                            "Sid": "AllowGetUser",
                            "Effect": "Allow",
                            "Action": [
                                "iam:GetUser"
                            ],
                            "Resource": "arn:aws:iam::991096851101:user/deployer"
                        }
                    ]
                },
                "Users": [
                    {
                        "Ref": "DeployerUser"
                    }
                ]
            },
            "DependsOn": [
                "dataFilesToProcess"
            ]
        },
        "DeployerUser": {
            "Type": "AWS::IAM::User",
            "Properties": {
                "UserName": "deployer"
            }
        },
        "DeployerUserAccessKey": {
            "Type": "AWS::IAM::AccessKey",
            "Properties": {
                "UserName": {
                    "Ref": "DeployerUser"
                }
            }
        }
    }
}